{
  // ----- VSCode / Cursor -----

  // Themes
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.activeIconPack": "none",
  "material-icon-theme.saturation": 0.8,

  // Typography
  "editor.fontFamily": "CommitMono Nerd Font, Menlo, Monaco, Courier New, monospace",
  "editor.fontSize": 12,
  "editor.lineHeight": 1.8,
  "terminal.integrated.fontFamily": "CommitMono Nerd Font, Menlo, Monaco, Courier New, monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.lineHeight": 1.3,

  // UI / UX
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.tree.indent": 12,
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  "editor.hover.delay": 500,
  "editor.wordWrapColumn": 120,
  "editor.padding.top": 8,
  "editor.cursorBlinking": "smooth",

  // IDE
  "editor.accessibilitySupport": "off",
  "editor.unicodeHighlight.allowedLocales": {
    "en": true,
    "fr": true
  },
  "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",.<>/?",
  "extensions.ignoreRecommendations": true,

  // Silence the noise
  "workbench.tips.enabled": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "breadcrumbs.enabled": false,
  "editor.colorDecorators": false,
  "editor.guides.indentation": false,
  "editor.lightbulb.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.selectionHighlight": false,
  "editor.occurrencesHighlight": "off",
  "editor.renderLineHighlight": "none",
  "editor.matchBrackets": "never",
  "editor.renderControlCharacters": false,
  "editor.hideCursorInOverviewRuler": true,
  "scm.diffDecorations": "none",
  "git.decorations.enabled": false,

  // Suggestions
  "editor.quickSuggestions": {
    "strings": "on",
    "other": "on",
    "comments": "on"
  },
  "editor.suggestOnTriggerCharacters": true,
  "editor.inlineSuggest.enabled": false,
  // "editor.inlineSuggest.suppressSuggestions": true,Â¨

  // AI / Completions
  "cursor.cpp.disabledLanguages": ["markdown", "plaintext"],
  "cursor.cpp.enablePartialAccepts": true,

  // Git / Gitlens
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.openRepositoryInParentFolders": "never",
  "gitlens.currentLine.enabled": false,
  "gitlens.views.scm.grouped.views": {
    "commits": false,
    "stashes": false
  },

  // Performances
  "redhat.telemetry.enabled": false,
  "gitlens.telemetry.enabled": false,
  // "editor.largeFileOptimizations": false,

  // Type checking
  // "js/ts.implicitProjectConfig.checkJs": true,

  // Linting

  // Formatting (.editorconfig)
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.insertSpaces": true,
  "editor.indentSize": 2,
  "editor.tabSize": 2,

  // Formatting (built-in)
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.detectIndentation": true,
  "files.trimFinalNewlines": true,

  // Files associations
  "emmet.includeLanguages": {
    "smarty": "html",
    "twig": "html"
  },
  "files.associations": {
    // "*.html": "smarty",
    // "*.tpl": "smarty",
    // "*.scss": "postcss",
  },

  // Javascript
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.importModuleSpecifierEnding": "minimal",

  // TypeScript
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "typescript.preferences.includePackageJsonAutoImports": "auto",
  "typescript.preferences.preferTypeOnlyAutoImports": true,

  // ----- Extensions -----

  // Tailwind CSS Intellisence
  "tailwindCSS.emmetCompletions": true,

  // ----- Languages override -----

  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },

  // --- Unsorted ---
  "workbench.colorCustomizations": {}
}

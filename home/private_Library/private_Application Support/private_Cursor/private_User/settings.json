{
  // ----- VSCode / Cursor -----

  // Theme
  "workbench.colorTheme": "One Dark Pro",
  "workbench.iconTheme": "material-icon-theme",
  "material-icon-theme.activeIconPack": "none",
  "material-icon-theme.saturation": 0.75,

  // Typography
  "editor.fontFamily": "CommitMono Nerd Font, Menlo, Monaco, Courier New, monospace",
  "editor.fontSize": 13,
  "editor.fontWeight": "normal",
  "editor.letterSpacing": 0,
  "editor.lineHeight": 1.7,
  "terminal.integrated.fontFamily": "CommitMono Nerd Font, Menlo, Monaco, Courier New, monospace",
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.lineHeight": 1.3,

  // UI / UX
  "window.commandCenter": true,
  "workbench.activityBar.location": "top",
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.labelFormat": "short",
  "workbench.tree.indent": 14,
  "explorer.autoReveal": false,
  "explorer.compactFolders": false,
  // "explorer.sortOrder": "filesFirst",
  "editor.hover.delay": 500,
  "editor.wordWrapColumn": 120,
  "editor.padding.top": 8,
  "editor.cursorBlinking": "smooth",
  "workbench.startupEditor": "none",
  "editor.accessibilitySupport": "off",
  "editor.unicodeHighlight.allowedLocales": {
    "en": true,
    "fr": true
  },
  "extensions.ignoreRecommendations": true,
  "telemetry.telemetryLevel": "off",
  "security.workspace.trust.untrustedFiles": "open",
  "typescript.suggest.autoImports": true,
  "javascript.suggest.autoImports": true,

  // Terminal
  "terminal.integrated.defaultProfile.osx": "zsh",

  // Silence the noise
  "workbench.tips.enabled": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "breadcrumbs.enabled": false,
  "editor.guides.indentation": false,
  "editor.lightbulb.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  // "editor.selectionHighlight": false,
  "editor.occurrencesHighlight": "multiFile",
  // "editor.renderLineHighlight": "none",
  "editor.matchBrackets": "always",
  "editor.renderControlCharacters": false,
  "editor.hideCursorInOverviewRuler": true,
  "scm.diffDecorations": "none",
  "git.decorations.enabled": false,
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/__pycache__": true
  },
  // Suggestions
  // "editor.quickSuggestions": {
  //   "strings": "on",
  //   "other": "on",
  //   "comments": "on"
  // },
  // "editor.suggestOnTriggerCharacters": true,
  // "editor.inlineSuggest.enabled": false,
  // "editor.inlineSuggest.suppressSuggestions": true,

  // AI / Completions
  "cursor.cpp.disabledLanguages": [],
  "cursor.composer.collapsePaneInputBoxPills": true,
  "cursor.composer.shouldAllowCustomModes": true,
  "cursor.composer.shouldAutoScrollToBottom": false,
  "cursor.composer.shouldChimeAfterChatFinishes": true,

  // Git / Gitlens
  "git.autofetch": true,
  "git.confirmSync": false,
  "gitlens.defaultDateLocale": "fr-FR",
  "gitlens.currentLine.enabled": false,
  "gitlens.views.scm.grouped.views": {
    "commits": false,
    "stashes": false
  },

  // Performances
  "redhat.telemetry.enabled": false,
  "gitlens.telemetry.enabled": false,
  // "editor.largeFileOptimizations": false,

  // Type checking
  // "js/ts.implicitProjectConfig.checkJs": true,

  // Linting

  // Formatting (.editorconfig)
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "editor.insertSpaces": true,
  "editor.indentSize": 2,
  "editor.tabSize": 2,

  // Formatting (built-in)
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.detectIndentation": true,
  "files.trimFinalNewlines": true,

  // Formatting (extensions)
  "prettier.requireConfig": false,

  // Files associations
  "emmet.includeLanguages": {
    "smarty": "html",
    "twig": "html"
  },
  "files.associations": {
    // "*.html": "smarty",
    // "*.tpl": "smarty",
    // "*.scss": "postcss",
  },

  // ----- Extensions -----

  // Tailwind CSS Intellisence
  "tailwindCSS.emmetCompletions": true,

  // ----- Language specific -----

  // Javascript
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.preferences.importModuleSpecifierEnding": "minimal",

  // TypeScript
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "typescript.preferences.includePackageJsonAutoImports": "on",
  "typescript.preferences.preferTypeOnlyAutoImports": true,
  "typescript.preferences.autoImportFileExcludePatterns": ["@radix-ui/*"],

  // Python
  "python.analysis.typeCheckingMode": "basic",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.autoImportCompletions": true,

  // ----- Languages override -----

  "[c]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[cpp]": {
    "editor.defaultFormatter": "ms-vscode.cpptools"
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },

  // --- Unsorted ---
  "workbench.colorCustomizations": {},
  "cursor.general.globalCursorIgnoreList": [
    "**/.env",
    "**/.env.*",
    "**/credentials.json",
    "**/credentials.*.json",
    "**/secret.json",
    "**/secrets.json",
    "**/*.key",
    "**/*.pem",
    "**/*.pfx",
    "**/*.p12",
    "**/*.crt",
    "**/*.cer",
    "**/id_rsa",
    "**/id_dsa",
    "**/.ssh/id_*",
    "**/*.env.*",
    "**/.sentryclirc"
  ],
  "editor.linkedEditing": true,
  "editor.colorDecorators": false,
  "security.promptForLocalFileProtocolHandling": false
}
